        android:adjustViewBounds="true"
        android:src="@drawable/book"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test"
        android:padding="@dimen/activity_vertical_margin"/>
    </LinearLayout>

